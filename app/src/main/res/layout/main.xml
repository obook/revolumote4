<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    tools:context=".MainActivity" >

    <!-- Row 1 -->
    <TableRow
        android:id="@+id/tableRow1"
        android:layout_weight="5">
        <!-- fleche gauche -->
        <Button
            android:id="@+id/button_red"
            style="@style/ButtonFontStyleBig"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/red_button"
            android:text="@string/button00"
            android:textColor="@android:color/white" />
        <!-- Info -->
        <Button
            android:id="@+id/button_yellow"
            style="@style/ButtonFontStyleMedium"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/yellow_button"
            android:text="@string/button01"
            android:textColor="@android:color/white" />
        <!-- Menu -->
        <Button
            android:id="@+id/button_green"
            style="@style/ButtonFontStyleMedium"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/green_button"
            android:text="@string/button02"
            android:textColor="@android:color/white" />
        <!-- Rech -->
        <Button
            android:id="@+id/button_blue"
            style="@style/ButtonFontStyleMedium"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/blue_button"
            android:text="@string/button03"
            android:textColor="@android:color/white" />
    </TableRow>

    <!-- Row 2 -->
    <TableRow
        android:id="@+id/tableRow2"
        android:layout_weight="5">
        <!-- 1 -->
        <Button
            android:id="@+id/button_1"
            style="@style/ButtonFontStyleBig"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/white_button"
            android:text="@string/button10" />
        <!-- 2 -->
        <Button
            android:id="@+id/button_2"
            style="@style/ButtonFontStyleBig"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/white_button"
            android:text="@string/button11" />
        <!-- 3 -->
        <Button
            android:id="@+id/button_3"
            style="@style/ButtonFontStyleBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_button"
            android:text="@string/button12" />
        <!-- 4 -->
        <Button
            android:id="@+id/button_4"
            style="@style/ButtonFontStyleBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_button"
            android:text="@string/button13" />
    </TableRow>

    <!-- Row 3 -->
    <TableRow
        android:id="@+id/tableRow3"
        android:layout_weight="5">
        <!-- 5 -->
        <Button
            android:id="@+id/button_5"
            style="@style/ButtonFontStyleBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_button"
            android:text="@string/button20" />
        <!-- 6 -->
        <Button
            android:id="@+id/button_6"
            style="@style/ButtonFontStyleBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_button"
            android:text="@string/button21" />
        <!-- 7 -->
        <Button
            android:id="@+id/button_7"
            style="@style/ButtonFontStyleBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_button"
            android:text="@string/button22" />
        <!-- 8 -->
        <Button
            android:id="@+id/button_8"
            style="@style/ButtonFontStyleBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_button"
            android:text="@string/button23" />
    </TableRow>

    <!-- Row 4 -->
    <TableRow
        android:id="@+id/tableRow4"
        android:layout_weight="5">
        <!-- 9 -->
        <Button
            android:id="@+id/button_9"
            style="@style/ButtonFontStyleBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_button"
            android:text="@string/button30" />
        <!-- 0 -->
        <Button
            android:id="@+id/button_0"
            style="@style/ButtonFontStyleBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_button"
            android:text="@string/button31" />
        <!-- Pause -->
        <Button
            android:id="@+id/button_play"
            style="@style/ButtonFontStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gray_button"
            android:text="@string/button32"
            android:textColor="@android:color/white" />
        <!-- Rec -->
        <Button
            android:id="@+id/button_rec"
            style="@style/ButtonFontStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_button"
            android:text="@string/button33"
            android:textColor="#FF2222"
            android:textStyle="bold" />
    </TableRow>

    <!-- Row 5 -->
    <TableRow
        android:id="@+id/tableRow5"
        android:layout_weight="5">
        <!-- Vol- -->
        <Button
            android:id="@+id/button_vol_dec"
            style="@style/ButtonFontStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:text="@string/button40"
            android:textColor="@android:color/white" />
        <!-- Up -->
        <Button
            android:id="@+id/button_up"
            style="@style/ButtonFontStyleBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gray_button"
            android:text="@string/button41"
            android:textColor="@android:color/white" />
        <!-- Mute -->
        <Button
            android:id="@+id/button_mute"
            style="@style/ButtonFontStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/pink_button"
            android:text="@string/button42"
            android:textColor="@android:color/white" />
        <!-- Vol+ -->
        <Button
            android:id="@+id/button_vol_inc"
            style="@style/ButtonFontStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/blue_button"
            android:text="@string/button43"
            android:textColor="@android:color/white" />
    </TableRow>

    <!-- Row 6 -->
    <TableRow
        android:id="@+id/tableRow6"
        android:layout_weight="5">
        <!-- Gauche -->
        <Button
            android:id="@+id/button_left"
            style="@style/ButtonFontStyleBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gray_button"
            android:text="@string/button50"
            android:textColor="@android:color/white" />
        <!-- Ok -->
        <Button
            android:id="@+id/button_ok"
            style="@style/ButtonFontStyleMedium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gray_button"
            android:text="@string/button51"
            android:textColor="@android:color/white" />
        <!-- Droite -->
        <Button
            android:id="@+id/button_right"
            style="@style/ButtonFontStyleBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_column="2"
            android:background="@drawable/gray_button"
            android:text="@string/button52"
            android:textColor="@android:color/white" />
        <!-- Pgm + -->
        <Button
            android:id="@+id/button_prgm_inc"
            style="@style/ButtonFontStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_button"
            android:text="@string/button53" />
    </TableRow>

    <!-- Row 7 -->
    <TableRow
        android:id="@+id/tableRow7"
        android:layout_weight="5">
        <!-- On/Off -->
        <Button
            android:id="@+id/button_power"
            style="@style/ButtonFontStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_button"
            android:text="@string/button60" />
        <!-- Down -->
        <Button
            android:id="@+id/button_down"
            style="@style/ButtonFontStyleBig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gray_button"
            android:text="@string/button61"
            android:textColor="@android:color/white" />
        <!-- Free -->
        <Button
            android:id="@+id/button_home"
            style="@style/ButtonFontStyleMedium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_button"
            android:text="@string/button62"
            android:textColor="#ff0000"
            android:textStyle="bold|italic" />
        <!--Pgm- -->
        <Button
            android:id="@+id/button_prgm_dec"
            style="@style/ButtonFontStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/white_button"
            android:text="@string/button63" />
    </TableRow>

</TableLayout>